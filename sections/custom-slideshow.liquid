<div class="bg-[url('{{section.settings.main_bg_img}}')]">
  <p>{{ section.settings.main_article_text }}</p>
</div>
<div>
  {% for block in blocks %}
    <div class="bg-[url('{{block.settings.article_bg_img}}')]">
      <p>{{ block.settings.article_title }}</p>
      <p>{{ block.settings.article_desc_text }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "custom-slideshow",
  "type": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "main_bg_img",
      "label": "Choose a background image"
    },
    {
      "type": "text",
      "id": "main_article_text",
      "label": "Input main text"
    }
  ],
  "blocks": [
    {
      "name": "product_grid",
      "type": "product_grid",
      "limit": 10,
      "settings": [
        {
          "type": "text",
          "id": "article_title",
          "label": "Input main article Title"
        },
        {
          "type": "image_picker",
          "id": "article_bg_img",
          "label": "Insert the background image"
        },
        {
          "type": "text",
          "id": "article_desc_text",
          "label": "Insert price or description of your product"
        }
      ]
    }
  ]
}
{% endschema %}
