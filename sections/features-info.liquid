<section class="features-info">
  <div class="px-[20px] py-[16px] bg-[{{section.settings.bg_color}}] grid place-items-center gap-[16px]">
    {% for block in section.blocks %}
      <div class="features-info-container">
        <div class="mb-[8px]"><img src="{{block.settings.block_icon | img_url :''}}" alt=""></div>
        <p class="josefin text-[#F8F8F8] txt5">
          {{ block.settings.block_text }}
        </p>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "features-info",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Insert background color"
    }
  ],
  "blocks": [
    {
      "name": "icons-with-text",
      "type": "icons-with-text",
      "settings": [
        {
          "type": "image_picker",
          "id": "block_icon",
          "label": "Input Icon"
        },
        {
          "type": "text",
          "id": "block_text",
          "label": "Input text"
        }
      ]
    }
  ]
}
{% endschema %}
